                    <image
                        src="{{(item.kind === 3) ? '../../components/parks/company.png' : '../../components/parks/person.png'}}"
                        style="height: 100%; width: 100%;" />
                </view>
                <view class="park-type">
                    {{(item.kind === 3) ? "企业类" : "个人类"}}
                </view>
            </view>
            <view class="park-right">
                <view class="park-name">{{item.parkName}}</view>
                <view class="park-detail">
                    <view wx:if="{{item.isOpen}}" class="park-number">
                        车位情况:
                        <text class="park-number-rented">{{item.rentPark}}</text>
                        <text class="park-number-all">/{{item.allPark}}</text>
                    </view>
                    <view></view>
                </view>
            </view>
            <view class="vertical-wrapper">
                <view class="switcher-wrapper">
                    <view data-park-id="{{item.parkId}}"
                        data-is-open="{{item.isOpen}}"
                        class="zan-switch zan-switch--{{ item.isOpen ? 'on' : 'off' }} {{ disabled ? 'zan-swtich--disabled' : '' }}"
                        checked="{{ checked }}"
                        loading="{{ loading }}"
