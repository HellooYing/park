<script>
import wepy from 'wepy'
import Dialog from "../dialog/dialog"
import post from "../../common/post.js"
import config from "../../config.js"

export default class Parks extends wepy.component {
    components = {
        Dialog
    }

    props = {}

    data = {
        parks: [
            {
                parkName: '王邦铮的停车场',
                kind: 3,
                allPark: 100,
                rentPark: 60,
                parkId: 10086,
                isOpen: true
            },
            {
                parkName: 'zackbee',
                kind: 4,
                parkId: 10087,
                isOpen: true,
                rentPark: 0,
                allPark: 1
            }
        ],
        onDialogButtonClick: (event) => {
            let type = event.currentTarget.dataset.type
            if (type === "cancel") {
                this.hideDialog()
            } else {
                console.log("will send request")
                // 保存当前的parkId
                let currentParkID = this.currentParkID
                post()
                this.parks.forEach((park) => {
                    if (this.currentParkId === park.parkId) {
                        park.isOpen = false
                    }
                })
                this.hideDialog()
            }
        },
        hideDialog: (event) => {
            this.isDialogShow = false
            this.$apply()
        },
        isDialogShow: false,
        dialogMessage: "你确定要停止发布这个停车位吗",
        buttons: [
            {
                // 按钮文案
                text: '取消',
                // 按钮文字颜色
                color: '#3cc51f',
                // 按钮类型，用于在 then 中接受点击事件时，判断是哪一个按钮被点击
                type: 'cancel'
            },
            {
                text: '确定',
                type: 'confirm'
            }
        ],
        currentParkId: ""
    }

    methods = {
        onSwitchChange: (event) => {
            let data = event.currentTarget.dataset
            this.currentParkId = data.parkId
            if (data.isOpen) {
                let parkName
                this.parks.forEach((park) => {
                    if (park.parkId === data.parkId) {
                        parkName = park.parkName
                    }
                })
                this.dialogMessage = `你确定要停止发布<${parkName}>吗?`
                this.$apply()
                this.isDialogShow = true
                this.$apply()
            }
        }
    }

    onLoad() {

    }
}
</script>
